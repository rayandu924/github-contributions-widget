{
  "name": "GitHub Contributions",
  "version": "1.0.2",
  "sdkVersion": "2.17.0",
  "description": "Display your GitHub contribution graph - the famous green squares showing your daily commits and activity throughout the year.",
  "author": "MyWallpaper",
  "type": "widget",
  "categories": [
    "productivity",
    "social",
    "developer"
  ],
  "license": "MIT",
  "homepage": "https://github.com/rayandu924/github-contributions-widget",
  "repository": "https://github.com/rayandu924/github-contributions-widget",
  "capabilities": {
    "hotReload": true,
    "systemEvents": [
      "viewport:resize",
      "theme:change",
      "visibility:change"
    ]
  },
  "permissions": {
    "storage": {
      "quota": 524288
    },
    "network": {
      "domains": [
        "api.github.com"
      ]
    }
  },
  "oauth": {
    "required": [
      {
        "provider": "github",
        "scopes": [
          "read:user"
        ],
        "reason": "Required to fetch your contribution data"
      }
    ]
  },
  "defaultLayout": {
    "xPercent": 50,
    "yPercent": 80,
    "widthPercent": 60,
    "heightPercent": 20,
    "rotation": 0
  },
  "settings": {
    "appearance": {
      "type": "section",
      "label": "Appearance"
    },
    "showHeader": {
      "type": "boolean",
      "label": "Show Header",
      "default": true
    },
    "showFooter": {
      "type": "boolean",
      "label": "Show Footer (Legend & Stats)",
      "default": true
    },
    "showLabels": {
      "type": "boolean",
      "label": "Show Month Labels",
      "default": true
    },
    "showDayLabels": {
      "type": "boolean",
      "label": "Show Day Labels",
      "default": true
    },
    "showStats": {
      "type": "boolean",
      "label": "Show Stats",
      "default": true
    },
    "colors": {
      "type": "section",
      "label": "Contribution Colors"
    },
    "colorLevel0": {
      "type": "color",
      "label": "Empty (0)",
      "default": "#161b22"
    },
    "colorLevel1": {
      "type": "color",
      "label": "Low (1)",
      "default": "#0e4429"
    },
    "colorLevel2": {
      "type": "color",
      "label": "Medium (2)",
      "default": "#006d32"
    },
    "colorLevel3": {
      "type": "color",
      "label": "High (3)",
      "default": "#26a641"
    },
    "colorLevel4": {
      "type": "color",
      "label": "Max (4)",
      "default": "#39d353"
    },
    "background": {
      "type": "section",
      "label": "Background"
    },
    "showBackground": {
      "type": "boolean",
      "label": "Show Background",
      "default": true
    },
    "backgroundColor": {
      "type": "gradient",
      "label": "Background Style",
      "default": "linear-gradient(135deg, #0d1117 0%, #161b22 100%)"
    },
    "backgroundBlur": {
      "type": "range",
      "label": "Background Blur",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 10
    },
    "data": {
      "type": "section",
      "label": "Data Settings"
    },
    "displayMode": {
      "type": "select",
      "label": "Display Mode",
      "options": [
        {
          "value": "year",
          "label": "Full Year"
        },
        {
          "value": "month",
          "label": "Current Month"
        }
      ],
      "default": "year"
    },
    "refreshInterval": {
      "type": "range",
      "label": "Refresh (min)",
      "min": 5,
      "max": 60,
      "step": 5,
      "default": 30
    }
  }
}