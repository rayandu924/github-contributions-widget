{
  "name": "GitHub Contributions",
  "version": "1.0.0",
  "description": "Display your GitHub contribution graph - the famous green squares showing your daily commits and activity throughout the year.",
  "author": "MyWallpaper",
  "type": "widget",
  "categories": ["productivity", "social", "developer"],
  "license": "MIT",
  "homepage": "https://github.com/rayandu924/github-contributions-widget",
  "repository": "https://github.com/rayandu924/github-contributions-widget",

  "capabilities": {
    "hotReload": true,
    "systemEvents": ["viewport:resize", "theme:change", "visibility:change"]
  },

  "permissions": {
    "storage": {
      "quota": 524288
    },
    "network": {
      "domains": ["api.github.com"]
    }
  },

  "oauth": {
    "required": [
      {
        "provider": "github",
        "scopes": ["read:user"],
        "reason": "Required to fetch your contribution data"
      }
    ]
  },

  "defaultLayout": {
    "xPercent": 50,
    "yPercent": 80,
    "widthPercent": 60,
    "heightPercent": 20,
    "rotation": 0
  },

  "settings": {
    "appearance": {
      "type": "section",
      "label": "Appearance"
    },
    "theme": {
      "type": "select",
      "label": "Color Theme",
      "options": [
        { "value": "github-green", "label": "GitHub Green (Classic)" },
        { "value": "github-dark", "label": "GitHub Dark" },
        { "value": "blue", "label": "Ocean Blue" },
        { "value": "purple", "label": "Purple Rain" },
        { "value": "orange", "label": "Sunset Orange" },
        { "value": "pink", "label": "Pink Blossom" },
        { "value": "custom", "label": "Custom Color" }
      ],
      "default": "github-green"
    },
    "customColor": {
      "type": "color",
      "label": "Custom Base Color",
      "default": "#39d353",
      "description": "Used when theme is set to 'Custom Color'"
    },
    "showLabels": {
      "type": "boolean",
      "label": "Show Month Labels",
      "default": true
    },
    "showDayLabels": {
      "type": "boolean",
      "label": "Show Day Labels (Mon, Wed, Fri)",
      "default": true
    },
    "showTooltips": {
      "type": "boolean",
      "label": "Show Tooltips on Hover",
      "default": true
    },
    "showStats": {
      "type": "boolean",
      "label": "Show Stats Summary",
      "default": true
    },
    "data": {
      "type": "section",
      "label": "Data Settings"
    },
    "year": {
      "type": "select",
      "label": "Year to Display",
      "options": [
        { "value": "current", "label": "Current Year" },
        { "value": "2025", "label": "2025" },
        { "value": "2024", "label": "2024" },
        { "value": "2023", "label": "2023" },
        { "value": "2022", "label": "2022" }
      ],
      "default": "current"
    },
    "refreshInterval": {
      "type": "range",
      "label": "Refresh Interval (minutes)",
      "min": 5,
      "max": 60,
      "step": 5,
      "default": 30,
      "description": "How often to fetch new contribution data"
    },
    "layout": {
      "type": "section",
      "label": "Layout"
    },
    "cellSize": {
      "type": "range",
      "label": "Cell Size (px)",
      "min": 8,
      "max": 20,
      "step": 1,
      "default": 12
    },
    "cellGap": {
      "type": "range",
      "label": "Cell Gap (px)",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    },
    "borderRadius": {
      "type": "range",
      "label": "Cell Border Radius (px)",
      "min": 0,
      "max": 6,
      "step": 1,
      "default": 2
    },
    "background": {
      "type": "section",
      "label": "Background"
    },
    "showBackground": {
      "type": "boolean",
      "label": "Show Background",
      "default": true
    },
    "backgroundColor": {
      "type": "color",
      "label": "Background Color",
      "default": "#0d1117"
    },
    "backgroundOpacity": {
      "type": "range",
      "label": "Background Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 80
    },
    "backgroundBlur": {
      "type": "range",
      "label": "Background Blur (px)",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 10
    }
  }
}
